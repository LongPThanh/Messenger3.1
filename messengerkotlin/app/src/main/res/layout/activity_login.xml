<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#03A9F4"
tools:context=".LoginActivity">

<EditText
    android:id="@+id/text_email_login"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="180dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/drawbletext"
    android:ems="10"
    android:hint="Email"
    android:paddingLeft="30dp"
    android:inputType="textEmailAddress"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<EditText
    android:id="@+id/text_password_login"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/drawbletext"
    android:ems="10"
    android:hint="Password"
    android:paddingLeft="30dp"
    android:inputType="textPassword"
    app:layout_constraintEnd_toEndOf="@+id/text_email_login"
    app:layout_constraintStart_toStartOf="@+id/text_email_login"
    app:layout_constraintTop_toBottomOf="@+id/text_email_login" />

<Button
    android:id="@+id/button_login"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:background="@drawable/drawbletext"
    android:text="Login"
    app:layout_constraintEnd_toEndOf="@+id/text_password_login"
    app:layout_constraintStart_toStartOf="@+id/text_password_login"
    app:layout_constraintTop_toBottomOf="@+id/text_password_login" />

<Button
    android:id="@+id/button_backtoregister"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/drawbletext"
    android:text="Back to Register"
    app:layout_constraintEnd_toEndOf="@+id/button_login"
    app:layout_constraintStart_toStartOf="@+id/button_login"
    app:layout_constraintTop_toBottomOf="@+id/button_login" />
</androidx.constraintlayout.widget.ConstraintLayout>